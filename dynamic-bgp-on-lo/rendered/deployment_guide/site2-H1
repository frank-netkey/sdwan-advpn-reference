######################################
# 06-Hub-InterVRF.j2
######################################
config system zone
  edit "pevrf_leak_zone"
    unset interface 
  next
  edit "vrfs_leak_zone"
    unset interface 
  next
end

######################################
# 07-Hub-Services.j2
######################################


######################################
# optional/11-Hub-SDWAN.j2
######################################
config system sdwan
  set status enable
  config zone
    edit "underlay"
    next
    edit "overlay"
    next
  end
  config members
    edit 1
      set interface "EDGE_ISP1"
      set priority 10
      set zone "overlay"
    next
    edit 2
      set interface "EDGE_MPLS"
      set priority 10
      set zone "overlay"
    next
  end
  config health-check
    edit "EDGE"
      set detect-mode remote
      set members 1 2
      set sla-id-redistribute 1
      config sla
        edit 1
          set link-cost-factor remote
          set priority-in-sla 5
          set priority-out-sla 995
        next
      end
    next
  end
end
config router static
  edit 100
    # Default route
    set sdwan-zone "underlay"
  next
end

######################################
# optional/12-Hub-Firewall.j2
######################################
config firewall address
  edit "CORP_LAN"
    set subnet 10.0.0.0/8
  next
end
config firewall policy
  purge
  edit 1
    set name "Edge-Edge"
    set srcintf overlay hub2hub_overlay
    set dstintf overlay hub2hub_overlay
    set srcaddr "CORP_LAN"
    set dstaddr "CORP_LAN"
    set action accept
    set schedule "always"
    set service "ALL"
    # Allow overlay switchover for existing sessions (from shortcut to Hub)
    set anti-replay disable
    set tcp-session-without-syn all
  next
  edit 2
    set name "Edge-Hub"
    set srcintf lan_zone overlay hub2hub_overlay
    set dstintf lan_zone overlay hub2hub_overlay
    set srcaddr "CORP_LAN"
    set dstaddr "CORP_LAN"
    set action accept
    set schedule "always"
    set service "ALL"
  next
  edit 3
    set name "Internet (DIA)"
    set srcintf lan_zone
    set dstintf "underlay"
    set srcaddr "all"
    set dstaddr "all"
    set action accept
    set schedule "always"
    set service "ALL"
    set utm-status enable
    set ssl-ssh-profile certificate-inspection
    set application-list "default"
    set logtraffic all
    set nat enable
  next
  edit 4
    set name "Internet (RIA)"
    set srcintf "overlay"
    set dstintf "underlay"
    set srcaddr "all"
    set dstaddr "all"
    set action accept
    set schedule "always"
    set service "ALL"
    set utm-status enable
    set ssl-ssh-profile certificate-inspection
    set application-list "default"
    set logtraffic all
    set nat enable
  next
  edit 5
    set name "Health-Check"
    set srcintf "overlay"
    set dstintf "Lo-HC"
    set srcaddr "all"
    set dstaddr "all"
    set action accept
    set schedule "always"
    set service "PING"
  next
  edit 6
    set name "Peering"
    set srcintf overlay hub2hub_overlay
    set dstintf "Lo"
    set srcaddr "all"
    set dstaddr "all"
    set action accept
    set schedule "always"
    set service "PING" "BGP"
  next
end

execute batch end
