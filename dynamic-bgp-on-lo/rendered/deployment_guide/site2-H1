execute batch start
######################################
# 01-Hub-Underlay.j2
######################################
config system settings
  set location-id 10.200.2.253
  set tcp-session-without-syn enable
  set allow-subnet-overlap enable
end
config system global
  set hostname site2-H1
end
config system interface
  edit "port1"
    set mode dhcp
    set vrf 0
    set role wan
    set allowaccess ping
  next
end
config system interface
  edit "port4"
    set mode static
    set ip 172.16.4.5/24
    set vrf 0
    set role wan
    set allowaccess ping
  next
end
config system interface
  edit "port5"
    set mode static
    set ip 10.4.0.1/24
    set vrf 0
    set role lan
    set device-identification enable
    set allowaccess ping
  next
end
config system interface
  edit "Lo-HC"
    set vdom root
    set type loopback
    set vrf 0
    set ip 10.200.99.1/32
    set allowaccess ping
  next
  edit "Lo"
    set vdom root
    set type loopback
    set vrf 0
    set ip 10.200.2.253/32
    set allowaccess ping
  next
end
config system zone
  edit "lan_zone"
    set interface port5
  next
end
config system dhcp server
  edit 10
    set dns-service default
    set default-gateway 10.4.0.1
    set netmask 255.255.255.0
    set interface port5
    config ip-range
      edit 1
        set start-ip 10.4.0.4
        set end-ip 10.4.0.251      
      next
    end
  next
end

######################################
# 02-Hub-Overlay.j2
######################################
config vpn ipsec phase1-interface
  edit "EDGE_ISP1"
    set type dynamic
    set interface "port1"
    set ike-version 2
    set transport udp
    set authmethod signature
    set certificate "Hub"
    set peertype any
    set localid ISP1-site2-H1
    set exchange-fgt-device-id enable
    set proposal aes256gcm-prfsha256 aes256-sha256
    set auto-discovery-sender enable
    set add-route disable
    set encapsulation none
    set exchange-ip-addr4 10.200.2.253
    set network-overlay enable
    set network-id 41
    set dpd-retrycount 2
    set dpd-retryinterval 5
    set dpd on-idle
    unset local-gw
  next
end
config vpn ipsec phase2-interface
  edit "EDGE_ISP1"
    set phase1name "EDGE_ISP1"
    set proposal aes256gcm
    set keepalive enable
  next
end
config system interface
  edit "EDGE_ISP1"
    set vrf 0
  next
end
config vpn ipsec phase1-interface
  edit "EDGE_MPLS"
    set type dynamic
    set interface "port4"
    set ike-version 2
    set transport udp
    set authmethod signature
    set certificate "Hub"
    set peertype any
    set localid MPLS-site2-H1
    set exchange-fgt-device-id enable
    set proposal aes256gcm-prfsha256 aes256-sha256
    set auto-discovery-sender enable
    set add-route disable
    set encapsulation none
    set exchange-ip-addr4 10.200.2.253
    set network-overlay enable
    set network-id 43
    set dpd-retrycount 2
    set dpd-retryinterval 5
    set dpd on-idle
    unset local-gw
  next
end
config vpn ipsec phase2-interface
  edit "EDGE_MPLS"
    set phase1name "EDGE_MPLS"
    set proposal aes256gcm
    set keepalive enable
  next
end
config system interface
  edit "EDGE_MPLS"
    set vrf 0
  next
end

######################################
# 03-Hub-Routing.j2
######################################
config router route-map
  edit "LOCAL_REGION"
    config rule
      edit 1
        set set-community "no-export"
        set set-tag 100
      next
    end
  next
  edit "LAN_TAG"
    config rule
      edit 1
        set set-tag 100
      next
    end
  next 
  edit "EDGE_OUT"
    config rule
      edit 100
      next
    end
  next 
end
config router bgp
  set as 65002
  set router-id 10.200.2.253
  set keepalive-timer 15
  set holdtime-timer 45
  set ibgp-multipath enable
  set ebgp-multipath enable
  set recursive-next-hop enable
  set recursive-inherit-priority enable
  set graceful-restart enable
  config neighbor-range
    purge
  end
  config neighbor-group
    purge
  end
  config aggregate-address
    purge
  end
  config neighbor-group
    edit EDGE
      set soft-reconfiguration enable
      set capability-graceful-restart enable
      set advertisement-interval 1
      set next-hop-self enable
      set remote-as 65002
      set interface "Lo"
      set update-source "Lo"
      unset route-reflector-client-vpnv4
      set route-reflector-client disable
      unset route-map-out-vpnv4
      set route-map-out "EDGE_OUT"          
      unset soft-reconfiguration-vpnv4
      unset capability-graceful-restart-vpnv4
    next
  end
  config neighbor-range
    edit 101
      set prefix 10.200.2.0/24
      set neighbor-group "EDGE"
    next
  end
  config aggregate-address
    edit 111
      set prefix 10.4.0.0/14
    next
  end
  config network
    edit 102
      set prefix 10.200.0.0/14
      set route-map "LOCAL_REGION"
    next  
    edit 111
      set prefix 10.4.0.0/24
      set route-map "LAN_TAG"
    next
  end
  config vrf
    purge
  end
end
config router policy
  purge
end
config router static
  edit 102
    set dst 10.200.0.0/14
    set blackhole enable
    set vrf 0
    set comment "Avoid potential recursive resolution of corporate BGP routes via underlay"
  next
end

######################################
# 04-Hub-MultiRegion.j2
######################################
      config vpn ipsec phase1-interface
        edit "WEST_H1_ISP1"
          set interface "port1"
          set ike-version 2
          set transport udp
          set authmethod signature
          set certificate "Hub"
          set peertype any
          set keylife 28800
          set exchange-fgt-device-id enable
          set proposal aes256gcm-prfsha256
          set auto-discovery-sender enable
          set auto-discovery-receiver enable
          set auto-discovery-forwarder enable
          set add-route disable
          set encapsulation none
          set remote-gw 100.64.1.1
          set exchange-ip-addr4 10.200.2.253
          set network-overlay disable
          set dpd-retrycount 3
          set dpd-retryinterval 5
          set dpd on-idle
        next
      end
      config vpn ipsec phase2-interface
        edit "WEST_H1_ISP1"
          set phase1name "WEST_H1_ISP1"
          set proposal aes256gcm
          set keepalive enable
          set keylifeseconds 3600
        next
      end
      config system interface
        edit "WEST_H1_ISP1"
          set vrf 0 
        next
      end
      config vpn ipsec phase1-interface
        edit "WEST_H2_ISP1"
          set interface "port1"
          set ike-version 2
          set transport udp
          set authmethod signature
          set certificate "Hub"
          set peertype any
          set keylife 28800
          set exchange-fgt-device-id enable
          set proposal aes256gcm-prfsha256
          set auto-discovery-sender enable
          set auto-discovery-receiver enable
          set auto-discovery-forwarder enable
          set add-route disable
          set encapsulation none
          set remote-gw 100.64.2.1
          set exchange-ip-addr4 10.200.2.253
          set network-overlay disable
          set dpd-retrycount 3
          set dpd-retryinterval 5
          set dpd on-idle
        next
      end
      config vpn ipsec phase2-interface
        edit "WEST_H2_ISP1"
          set phase1name "WEST_H2_ISP1"
          set proposal aes256gcm
          set keepalive enable
          set keylifeseconds 3600
        next
      end
      config system interface
        edit "WEST_H2_ISP1"
          set vrf 0 
        next
      end
      config vpn ipsec phase1-interface
        edit "WEST_H1_MPLS"
          set interface "port4"
          set ike-version 2
          set transport udp
          set authmethod signature
          set certificate "Hub"
          set peertype any
          set keylife 28800
          set exchange-fgt-device-id enable
          set proposal aes256gcm-prfsha256
          set auto-discovery-sender enable
          set auto-discovery-receiver enable
          set auto-discovery-forwarder enable
          set add-route disable
          set encapsulation none
          set remote-gw 172.16.1.5
          set exchange-ip-addr4 10.200.2.253
          set network-overlay disable
          set dpd-retrycount 3
          set dpd-retryinterval 5
          set dpd on-idle
        next
      end
      config vpn ipsec phase2-interface
        edit "WEST_H1_MPLS"
          set phase1name "WEST_H1_MPLS"
          set proposal aes256gcm
          set keepalive enable
          set keylifeseconds 3600
        next
      end
      config system interface
        edit "WEST_H1_MPLS"
          set vrf 0 
        next
      end
      config vpn ipsec phase1-interface
        edit "WEST_H2_MPLS"
          set interface "port4"
          set ike-version 2
          set transport udp
          set authmethod signature
          set certificate "Hub"
          set peertype any
          set keylife 28800
          set exchange-fgt-device-id enable
          set proposal aes256gcm-prfsha256
          set auto-discovery-sender enable
          set auto-discovery-receiver enable
          set auto-discovery-forwarder enable
          set add-route disable
          set encapsulation none
          set remote-gw 172.16.2.5
          set exchange-ip-addr4 10.200.2.253
          set network-overlay disable
          set dpd-retrycount 3
          set dpd-retryinterval 5
          set dpd on-idle
        next
      end
      config vpn ipsec phase2-interface
        edit "WEST_H2_MPLS"
          set phase1name "WEST_H2_MPLS"
          set proposal aes256gcm
          set keepalive enable
          set keylifeseconds 3600
        next
      end
      config system interface
        edit "WEST_H2_MPLS"
          set vrf 0 
        next
      end
config system zone
  edit "hub2hub_overlay"
    append interface WEST_H1_ISP1 WEST_H2_ISP1 WEST_H1_MPLS WEST_H2_MPLS
  next
end
config router aspath-list
  edit "SDWAN_AS"
    config rule
      purge
      edit 1
        set action permit
        set regexp "65001"
      next
    end
  next
end
config router access-list
  edit "LAN_REGIONAL_SUMMARY"
    config rule
      purge
      edit 0
        set prefix 10.4.0.0/14
        set exact-match enable
      next
    end
  next
  edit "LO_REGIONAL_SUMMARY"
    config rule
      purge
      edit 1
        set prefix 10.200.2.0/24
        set exact-match enable
      next
    end
  next
end
config router static
  edit 103
    set dst 10.200.2.0/24
    set blackhole enable
    set comment "Regional loopback summary"
  next
end
config router bgp
  config network
    edit 103
      set prefix 10.200.2.0/24
    next
  end
end
config router route-map
  edit "REGION_OUT"
    config rule
      purge
      edit 1
        set match-tag 100
      next
      edit 2
        set match-ip-address "LO_REGIONAL_SUMMARY"
        set set-metric 50
      next
      edit 3
        set match-ip-address "LAN_REGIONAL_SUMMARY"
        set set-metric 50
      next
    end
  next
  edit "EDGE_OUT"
    config rule
      edit 100
        unset match-tag
      next
    end
  next    
end
config router bgp
  config neighbor
    edit 10.200.1.253
      set ebgp-enforce-multihop enable
      set soft-reconfiguration enable
      set capability-graceful-restart enable
      set advertisement-interval 1
      set interface "Lo"
      set update-source "Lo"
      set connect-timer 1
      set remote-as 65001
      unset route-map-out-vpnv4
      set route-map-out "REGION_OUT"
      unset soft-reconfiguration-vpnv4
      unset capability-graceful-restart-vpnv4
    next
    edit 10.200.1.254
      set ebgp-enforce-multihop enable
      set soft-reconfiguration enable
      set capability-graceful-restart enable
      set advertisement-interval 1
      set interface "Lo"
      set update-source "Lo"
      set connect-timer 1
      set remote-as 65001
      unset route-map-out-vpnv4
      set route-map-out "REGION_OUT"
      unset soft-reconfiguration-vpnv4
      unset capability-graceful-restart-vpnv4
    next
  end
end

